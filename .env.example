# App
APP_HOST=0.0.0.0
APP_PORT=8000

# Public base URL used in emails (include scheme, host, and port if not default)
BASE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/hackathon_db

# Redis
REDIS_URL=redis://redis:6379/0

# Celery
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# JWT
JWT_SECRET=supersecretjwtkey
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=60

# Admin
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme

# Email (SMTP)
SMTP_HOST=smtp.example.com        # e.g. smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your@example.com       # SMTP username
SMTP_PASS=secret                 # SMTP password or app-specific password
